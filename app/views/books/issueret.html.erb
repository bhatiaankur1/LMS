<h1>Issue/Return Book</h1>

<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= @book.title %>
  </div>
<div class="field">
    <%= f.label :Author %><br />
    <%= @book.Author %>
  </div>
<div class="field">
    <%= f.label :subject %><br />
<%#= f.text_field :subjid %>
    <%= @subject.subject_name %>
</div>
<div class="field">
    <%= f.label :Book_Issued %><br />
<%= f.select :Bookissued, [['Free','Free'],['Issued','Issued']],:html_options => {:onclick =>'hideIssued();'}%>
    <%#= f.text_field :Bookissued %>
  </div>
<div class="field" id = "f1" style="display:none">
    <%= f.label :Issued_Person %><br />
    <%= f.text_field :Issuedperson %>
  </div>
 <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<%= link_to 'Back', issuedfree_books_path%>
<%= link_to 'Home', books_path %>
<script>
$(function(){
if($('#book_Bookissued').val() == "Issued")
{
$('#f1').show()
}
else
{
$('#f1').hide()
}
});
$("form").submit(function() {
      if ($('#book_Bookissued').val() == "Issued") {
        if ($('#book_Issuedperson').val() == "") {
          alert("Please enter Issued Person")
          return false
        }
      }
    });
$('#book_Bookissued').live('change',function()
{
if($('#book_Bookissued').val() == "Issued")
{
$('#f1').show()
}
else
{
$('#book_Issuedperson').val("")
$('#f1').hide()
}
});
</script>
